{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/*"]
}
